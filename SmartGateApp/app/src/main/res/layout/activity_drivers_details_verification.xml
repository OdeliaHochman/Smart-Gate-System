<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_background"
    tools:context=".DriversDetailsVerification">


    <TextView
        android:id="@+id/title_DDV"
        android:layout_width="721dp"
        android:layout_height="80dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/trade_winds"
        android:text="Driver's Details Verification"
        android:textColor="@color/green"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstName_DDV"
        android:layout_width="175dp"
        android:layout_height="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="4dp"
        android:text="First Name"
        android:textColor="@color/green"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/firstName_editTxt_DDV"
        app:layout_constraintEnd_toStartOf="@+id/IDNumber_DDV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_DDV" />


    <EditText
        android:id="@+id/firstName_editTxt_DDV"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:background="@color/gray"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lastName_DDV"
        app:layout_constraintEnd_toStartOf="@+id/IDNumber_editTxt_DDV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstName_DDV" />


    <TextView
        android:id="@+id/lastName_DDV"
        android:layout_width="175dp"
        android:layout_height="49dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="68dp"
        android:text="Last Name"
        android:textColor="@color/green"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/LPNumber_DDV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstName_editTxt_DDV" />

    <EditText
        android:id="@+id/lastName_editTxt_DDV"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="79dp"
        android:background="@color/gray"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/LPNumber_editTxt_DDV"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName_DDV"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/IDNumber_DDV"
        android:layout_width="175dp"
        android:layout_height="49dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="5dp"
        android:text="ID Number"
        android:textColor="@color/green"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/IDNumber_editTxt_DDV"
        app:layout_constraintEnd_toStartOf="@+id/employeeNumber_DDV"
        app:layout_constraintTop_toBottomOf="@+id/title_DDV" />

    <EditText
        android:id="@+id/IDNumber_editTxt_DDV"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="133dp"
        android:background="@color/gray"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/employeeNumber_editTxt_DDV"
        app:layout_constraintStart_toEndOf="@+id/firstName_editTxt_DDV"
        app:layout_constraintTop_toBottomOf="@+id/IDNumber_DDV" />

    <TextView
        android:id="@+id/LPNumber_DDV"
        android:layout_width="265dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="200dp"
        android:text="License Plate Number"
        android:textColor="@color/green"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDNumber_editTxt_DDV" />

    <EditText
        android:id="@+id/LPNumber_editTxt_DDV"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="262dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ok_btn_DDV"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toEndOf="@+id/lastName_editTxt_DDV"
        app:layout_constraintTop_toBottomOf="@+id/LPNumber_DDV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/employeeNumber_DDV"
        android:layout_width="215dp"
        android:layout_height="34dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="64dp"
        android:text="Employee Number"
        android:textColor="@color/green"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_DDV" />

    <EditText
        android:id="@+id/employeeNumber_editTxt_DDV"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="71dp"
        android:background="@color/gray_dark"
        app:layout_constraintBottom_toTopOf="@+id/LPNumber_DDV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IDNumber_editTxt_DDV"
        app:layout_constraintTop_toBottomOf="@+id/employeeNumber_DDV"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/ok_btn_DDV"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="27dp"
        android:background="@color/gray"
        android:text="Ok"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employeeNumber_editTxt_DDV"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>