<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_background">


    <ImageView
        android:id="@+id/bgapp1_details"
        android:layout_width="870dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        android:src="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="Authorized Person Details"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/authperson_image_Adetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="239dp"
        android:layout_height="84dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="38dp"
        android:orientation="vertical"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteProDet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/lp_number_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="License plate Number"
            android:textColor="@color/gray_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btnUpdateProDet"
            app:layout_constraintTop_toBottomOf="@+id/employee_number_text" />

        <TextView
            android:id="@+id/employee_number_Adetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Employee Number"
            android:textColor="@color/gray_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/lp_number_text"
            app:layout_constraintTop_toBottomOf="@+id/id_number_text" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="137dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toEndOf="@+id/authperson_image_Adetails"
        app:layout_constraintTop_toBottomOf="@+id/bgapp1_details">

        <TextView
            android:id="@+id/first_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="First Name:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/last_name_text" />

        <TextView
            android:id="@+id/last_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Last Name:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/id_number_text"
            app:layout_constraintTop_toBottomOf="@+id/first_name_text" />

        <TextView
            android:id="@+id/id_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="ID Number:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/lp_number_text"
            app:layout_constraintTop_toBottomOf="@+id/last_name_text" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="239dp"
        android:layout_height="84dp"
        android:layout_marginStart="95dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdateProDet"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
        app:layout_constraintStart_toEndOf="@+id/authperson_image_Adetails"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/lp_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="License plate Number:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/employee_number_text" />

        <TextView
            android:id="@+id/employee_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Employee Number:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/lp_number_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="137dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/bgapp1_details">

        <TextView
            android:id="@+id/first_name_Adetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="First Name"
            android:textColor="@color/gray_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/last_name_text" />

        <TextView
            android:id="@+id/last_name_Adetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Last Name"
            android:textColor="@color/gray_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/id_number_text"
            app:layout_constraintTop_toBottomOf="@+id/first_name_text" />

        <TextView
            android:id="@+id/id_Adetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="ID Number"
            android:textColor="@color/gray_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/employee_number_text"
            app:layout_constraintTop_toBottomOf="@+id/last_name_text" />

    </LinearLayout>

    <ImageView
        android:id="@+id/authperson_image_Adetails"
        android:layout_width="156dp"
        android:layout_height="143dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdateProDet"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgapp1_details"
        app:layout_constraintVertical_bias="0.586"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <Button
        android:id="@+id/btnDeleteProDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#EC1010"
        android:text="Delete Details"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnUpdateProDet"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnUpdateProDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#D025FA0D"
        android:text="Update Details"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteProDet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>